<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 900px;
      margin: 30px auto;
    }
    .post {
      border: 1px solid #ddd;
      margin-bottom: 20px;
      padding: 10px;
      background-size: cover;
      background-position: center;
      color: white;
      height: 200px;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      text-shadow: 2px 2px 5px #000;
      border-radius: 8px;
    }
    .post h2 {
      margin: 0 0 5px 0;
    }
    .post .date {
      font-size: 0.9em;
      opacity: 0.8;
    }
  </style>
</head>
<body>

  <h1>Posts</h1>

  <% posts.forEach(post => { %>
    <div class="post" style="background-image: url('<%= post.bgImage %>');">
      <h2><%= post.title %></h2>
      <div class="date"><%= post.date %></div>
    </div>
  <% }) %>

</body>
</html>
